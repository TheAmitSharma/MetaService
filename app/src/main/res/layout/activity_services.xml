<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/home_button_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:text="HOME"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/service_button_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVICE"
            android:textColor="@color/black"
            android:background="#00000000"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/profile_button_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:text="PROFILE"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/about_us_button_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:text="ABOUT US"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">

    <Button
        android:id="@+id/home_services"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="HOME SERVICES"
        android:backgroundTint="@color/black"
        android:textStyle="bold"
        android:layout_gravity="left"/>

        <Button
            android:id="@+id/office_services"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="OFFICE SERVICES"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/shop_services"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="SHOP SERVICES"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/other_services"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="OTHER SERVICES"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>

</LinearLayout>